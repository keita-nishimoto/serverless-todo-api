{
  "name": "serverless-todo-app-backend",
  "version": "1.0.0",
  "description": "serverlessで作成したTODOリストアプリ用のバックエンドサーバ",
  "private": true,
  "scripts": {
    "build": "tsc",
    "deploy": "tsc && serverless deploy -v",
    "lint": "tslint -p . -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint -p . -c tslint.json --fix 'src/**/*.{ts,tsx}'",
    "test": "mocha -t 30000 --require ts-node/register",
    "test:local": "IS_LOCAL=true mocha -t 30000 --require ts-node/register",
    "test:all": "mocha -t 30000 -R nyan --require ts-node/register 'src/tests/**/*.spec.ts'",
    "test:all:local": "IS_LOCAL=true mocha -t 30000 --require ts-node/register 'src/tests/**/*.spec.ts'",
    "server": "tsc && serverless offline",
    "dynamodb": "serverless dynamodb start",
    "migrate": "serverless dynamodb migrate",
    "debug": "tsc && node --inspect node_modules/.bin/serverless offline start"
  },
  "author": "keita-nishimoto",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^0.0.21",
    "@types/mocha": "^2.2.44",
    "@types/power-assert": "^1.4.29",
    "@types/source-map-support": "^0.4.0",
    "@types/uuid": "^3.4.0",
    "aws-sdk": "^2.156.0",
    "mocha": "^4.0.1",
    "power-assert": "^1.4.4",
    "serverless": "^1.24.1",
    "serverless-dynamodb-local": "^0.2.26",
    "serverless-offline": "^3.16.0",
    "ts-loader": "^3.1.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "jsonschema": "^1.1.1",
    "source-map-support": "^0.5.0",
    "uuid": "^3.1.0"
  }
}
