{
  "name": "serverless-todo-api",
  "version": "1.0.0",
  "description": "serverlessで作成したTODOリストアプリ用のAPI",
  "scripts": {
    "build": "tsc",
    "deploy": "tsc && serverless deploy -v",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "lint:fix": "tslint -c tslint.json --fix src/**/*.ts",
    "test": "mocha -t 30000 --compilers ts:ts-node/register",
    "test:local": "IS_LOCAL=true mocha -t 30000 --compilers ts:ts-node/register",
    "test:all": "mocha -t 30000 -R nyan --compilers ts:ts-node/register src/tests/**/*.spec.ts",
    "test:all:local": "IS_LOCAL=true mocha -t 30000 --compilers ts:ts-node/register src/tests/**/*.spec.ts",
    "server": "tsc && serverless offline",
    "debug": "tsc && node-debug serverless offline"
  },
  "author": "keita-nishimoto",
  "license": "MIT",
  "dependencies": {
    "@types/aws-lambda": "^0.0.13",
    "@types/mocha": "^2.2.41",
    "@types/power-assert": "^1.4.29",
    "@types/source-map-support": "^0.4.0",
    "@types/uuid": "^3.0.0",
    "aws-sdk": "^2.72.0",
    "axios": "^0.16.2",
    "mocha": "^3.4.2",
    "node-inspector": "^1.1.1",
    "power-assert": "^1.4.4",
    "serverless": "^1.15.3",
    "serverless-dynamodb-local": "^0.2.22",
    "serverless-offline": "^3.14.2",
    "source-map-support": "^0.4.15",
    "ts-loader": "^2.1.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4",
    "uuid": "^3.1.0"
  }
}
